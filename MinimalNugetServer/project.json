{
    "version": "1.0.3-*",
    "buildOptions": {
        "debugType": "portable",
        "emitEntryPoint": true,
        "warningsAsErrors": true
    },
    "authors": [ "Sebastien ROBERT" ],
    "description": "A minimal implementation of a NuGet server, running on .NET Core",
    "language": "en-US",
    "packOptions": {
        "projectUrl": "https://github.com/TanukiSharp/MinimalNugetServer"
    },
    "tools": {
        "Bitcraft.Tools.GitCommitHash": "1.0.1"
    },
    "scripts": {
        "precompile": "dotnet git-commit-hash"
    },
    "dependencies": {
        "Microsoft.NETCore.App": {
            "type": "platform",
            "version": "1.1.0"
        },
        "Microsoft.AspNetCore.Server.Kestrel": "1.1.0",
        "System.Xml.XDocument": "4.3.0",
        "Newtonsoft.Json": "9.0.1",
        "Microsoft.Extensions.Configuration.Abstractions": "1.1.0",
        "Microsoft.Extensions.Configuration.FileExtensions": "1.1.0",
        "Microsoft.Extensions.Configuration.Json": "1.1.0",
        "Microsoft.Extensions.Caching.Memory": "1.1.0"
    },
    "frameworks": {
        "netcoreapp1.1": {
            "imports": "dnxcore50"
        }
    }
}
